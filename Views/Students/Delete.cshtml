


@model StudentInfoManagementSystem.Models.Student

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-5">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.StudentName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StudentName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FatherName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FatherName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.MotherName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.MotherName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Age)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.HomeAddress)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.HomeAddress)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RegistrationDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RegistrationDate)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <p class="text-danger">This action is irreversible.</p>
                        <p>Deleting this student will mark them as deleted but keep their record in the database.</p>
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }

            @*@using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-9">
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            }*@
        </div>
    </div>

</body>
</html>


